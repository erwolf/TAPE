<html>
	<head>
		<!-- JQUERYUI CSS -->
		<!--link href="vendor/jquery-ui/jquery-ui.css" rel="stylesheet" type="text/css">
		<link href="vendor/jquery-ui/jquery-ui.modal.css" rel="stylesheet" type="text/css"-->
						
		<!-- TAPE CSS -->
    <%= stylesheet_link_tag("jquery-js.css") %>
    <%= stylesheet_link_tag("plans.css") %>
	</head>
	<body>
	
	<%= render 'layouts/header' %>
	<p id="notice"><%= notice %></p>

		<h1>Plans</h1>

		<table>
		  <thead>
			<tr>
			  <th><h1>Name</h1></th>
			  <th colspan="3"></th>
			</tr>
		  </thead>

		  <tbody>
			<% @plans.each do |plan| %>
			 <%= userName = user.find(plan.user_id) %>
			  <tr>
				  <% if current_user.role == "faculty" then %> <td><%= userName %></td><%end%>
				<td><h2><%= plan.name %></h2></td>
				<td><%= link_to(raw("<div class='button'>Show</div>"), plan)%></td>
				<!--td><%= link_to 'Edit', edit_plan_path(plan) %></td-->
				<td><%= link_to(raw("<div class='button'>Delete</div>"), plan, method: :delete, data: {confirm: 'Are you sure?'})%></td>
			  </tr>
			<% end %>
			
			<tr><td><%= link_to(raw("<div class='button'>New Plan</div>"), new_plan_path)%></td></tr>
		  </tbody>
		</table>

		<br>

		<% if current_user.role == "admin" then %> <div class="admin-section"> YOU ARE AN ADMIN </div><%end%>
	</body>
</html>

